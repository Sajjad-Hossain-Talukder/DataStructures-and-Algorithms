//This function count all co-prime( gcd ( i,j) = 1 )  from 1 to n-1 .
// Note that phi(n) = n-1 if n is prime
//-------------------------------------------------------------------
#include<bits/stdc++.h>
#define ll long long
#define pb push_back
using namespace std;

int phi_function( int n){
    int t1 = n , t2 = 1 ;
    if(n%2==0){
        t2*=2;
        while(n%2==0) n/=2;
    }
    for(int i = 3 ; i*i<=n ; i+=2){
        if(n%i==0){
            t1*=(i-1);
            t2*=i;
            while(n%i==0) n/=i;
        }
    }
    if(n>1) {
        t1*=(n-1);
        t2*=n;
    }
    n = t1/t2;
    return n;
}

int main(){
    int n,d;
    cin>>n;
    d = phi_function(n);
    cout<<d<<endl;
return 0;
}


