          #include<bits/stdc++.h>
          #define ll long long
          #define pb push_back
          using namespace std;

          int level[1000] , visited[1000];

          int main(){
              int node,edge,x,y;
              cin>>node>>edge;
              vector<int>graph[node+1];
              for(int i = 1 ; i<=edge ; i+=1){
                  cin>>x>>y;
                  graph[x].pb(y);
                  graph[y].pb(x);
              }

              for(int i = 0 ; i<node ; i+=1){
                  cout<<i<<" --> ";
                  for(auto a : graph[i])
                      cout<<a<<" ";
                  cout<<endl;
              }
              queue<int>q;
              q.push(2);
              visited[2] = 1 ;

            while( !q.empty() ){
                  x = q.front();
                  q.pop();
                  for(auto a : graph[x]){
                      if( !visited[a] ){
                          q.push(a);
                          level[a] = level[x]+1;
                          visited[a] = 1 ;
                      }
                  }
              }
              for(int i = 0 ; i<node ; i+=1 )
                  cout<<"node : "<<i<< " "<<level[i]<<endl;

          return 0;
          }
          /*
          8 8
          0 1
          0 2
          0 3
          1 4
          1 5
          2 6
          2 7
          3 7
          */
